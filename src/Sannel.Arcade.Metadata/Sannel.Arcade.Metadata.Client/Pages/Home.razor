@page "/app"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@using Sannel.Arcade.Metadata.Client.Components

<PageTitle>Home</PageTitle>

<CascadingAuthenticationState>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <MudText Typo="Typo.h3">Welcome to Arcade Metadata</MudText>
        <AuthDisplay />
    </div>

    <AuthorizeView>
        <Authorized>
            <MudAlert Severity="Severity.Success">
                Hello @context.User.Identity?.Name! You are successfully logged in.
            </MudAlert>
            <MudPaper Class="pa-4 mt-4" Elevation="2">
                <MudText Typo="Typo.h6">You now have access to:</MudText>
                <MudList>
                    <MudNavLink Href="/app/counter" Icon="@Icons.Material.Filled.Add">Counter - A simple counter demo</MudNavLink>
                    <MudListItem Icon="@Icons.Material.Filled.List" Text="Weather - Weather forecast data" />
                </MudList>
            </MudPaper>
        </Authorized>
        <NotAuthorized>
            <MudAlert Severity="Severity.Info">
                Please log in to access the application features.
            </MudAlert>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>