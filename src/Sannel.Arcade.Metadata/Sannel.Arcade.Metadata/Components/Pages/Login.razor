@page "/login"

<PageTitle>Login</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudPaper Class="pa-8 mt-8" Elevation="4">
        <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">
            Login
        </MudText>
        
        <MudAlert Severity="Severity.Info" Class="mb-4">
            Loading authentication system...
        </MudAlert>
        
        <MudProgressLinear Indeterminate="true" />
        
        <MudText Typo="Typo.body2" Class="mt-4" Align="Align.Center">
            If this page doesn't load automatically, please enable JavaScript and refresh.
        </MudText>
    </MudPaper>
</MudContainer>

<script>
    // Redirect to WebAssembly login after a brief delay
    setTimeout(function() {
        window.location.href = '/auth-login';
    }, 2000);
</script>